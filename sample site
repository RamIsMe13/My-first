<body>
  <div class="container">
    <h1>Online Class Attendance</h1>

    <div id="attendance-form">
      <div class="form-group">
        <label for="student-name">Student Name</label>
        <input type="text" id="student-name" placeholder="Enter student name">
      </div>

      <div class="form-group">
        <label for="date">Date</label>
        <input type="date" id="date">
      </div>

      <div class="form-group">
        <label for="reason">Reason for Absence</label>
        <textarea id="reason" placeholder="Enter reason for absence"></textarea>
      </div>

      <div class="form-group">
        <input type="submit" value="Submit" onclick="submitAttendance()">
      </div>
    </div>

    <h2>Attendance List:</h2>
    <ul id="attendance-list"></ul>
  </div>

  <!-- JavaScript code -->
  <script>
    function submitAttendance() {
      var studentName = document.getElementById("student-name").value;
      var date = document.getElementById("date").value;
      var reason = document.getElementById("reason").value;

      if (studentName.trim() === "" || date === "" || reason.trim() === "") {
        alert("Please fill in all fields.");
        return;
      }

      var attendanceList = document.getElementById("attendance-list");
      var listItem = document.createElement("li");
      listItem.setAttribute("class", "list-item");
      listItem.innerHTML = "<strong>" + studentName + "</strong> - " + date + "<br>Reason: " + reason;
      attendanceList.appendChild(listItem);

      document.getElementById("student-name").value = "";
      document.getElementById("date").value = "";
      document.getElementById("reason").value = "";
    }
  </script>
</body>
